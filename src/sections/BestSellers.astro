---
import AlbumDisplay from "../components/AlbumDisplay.astro";

const response = await fetch(Astro.url.origin + "/api/albums/best-sellers");
const bestSellers = await response.json();
---

<section class="section__container">
  <div class="latest__text">
    <h2 class="latest__title">BEST SELLERS</h2>
    <a class="link1" href="">SHOW MORE</a>
  </div>
  <div class="latest__container" id="LatestSlider">
    <ul class="swiper-wrapper" data-cursor="swipe">
      {
        bestSellers.map((a, i) => (
        <li class="swiper-slide">
          <AlbumDisplay
            title={a.name}
            image={a.images[0].url}
            artists={a.artists}
            id={a.id}
          />
        </li>
        ))
      }
    </ul>
  </div>
</section>

<script>

  import 'swiper/css';
  import Swiper from 'swiper';
  import { register } from 'swiper/element/bundle';
  register();

  const swiper = new Swiper('#LatestSlider', {
      loop: true,
      slidesPerView: 5,
      autoplay: false,
      grabCursor: true,
      mousewheel: false,
  });

</script>

<style>
  .latest__text {
    display: flex;
    margin-bottom: 40px;
    align-items: center;
    gap: 28px;
  }

  .latest__container {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    justify-content: center;
  }
</style>
